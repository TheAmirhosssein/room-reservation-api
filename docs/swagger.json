                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "Retrieve All Users",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 1,
                        "description": "Page number",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 10,
                        "description": "Number of users per page",
                        "name": "page-size",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by mobile number",
                        "name": "mobile-number",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by full name",
                        "name": "full-name",
                        "in": "query"
                    }
